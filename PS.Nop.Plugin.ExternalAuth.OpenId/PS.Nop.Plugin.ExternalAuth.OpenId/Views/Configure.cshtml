@model PS.Nop.Plugin.ExternalAuth.OpenId.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@inject Nop.Core.IWebHelper webHelper

<form asp-controller="PSOpenIdAuthentication" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @T("PS.Plugins.ExternalAuth.OpenId.Instructions")
                <div class="form-group">
                  <div class="col-md-3">
                    <nop-label asp-for="Authority" />
                  </div>
                  <div class="col-md-9">
                    <nop-editor asp-for="Authority" />
                    <span asp-validation-for="Authority"></span>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-3">
                    <nop-label asp-for="ResponseType" />
                  </div>
                  <div class="col-md-9">
                    <nop-editor asp-for="ResponseType" />
                    <span asp-validation-for="ResponseType"></span>
                  </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ClientId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClientId" />
                        <span asp-validation-for="ClientId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ClientSecret" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ClientSecret" />
                        <span asp-validation-for="ClientSecret"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="RequiresHttps" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="RequiresHttps" />
                        <span asp-validation-for="RequiresHttps"></span>
                    </div>
                </div>
                <div class="form-group">
                  <div class="col-md-3">
                    <nop-label asp-for="Scopes" />
                  </div>
                  <div class="col-md-9">
                    <nop-editor asp-for="Scopes" />
                    <span asp-validation-for="Scopes"></span>
                  </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div> 
</form>